<odoo>
<!-- Search View -->
<record id="consulting_service_entity_view_search" model="ir.ui.view">
    <field name="name">consulting_service_entity - search</field>
    <field name="model">consulting_service.entity</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="title" />
                <field name="partner_id" />
                <field name="service_id" />
                <field name="data_structure_id" />
            </xpath>
        </data>
    </field>
</record>

<!-- Tree View -->
<record id="consulting_service_entity_view_tree" model="ir.ui.view">
    <field name="name">consulting_service_entity - tree</field>
    <field name="model">consulting_service.entity</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="partner_id" />
                <field name="title" />
                <field name="service_id" />
                <field name="data_structure_id" />
            </xpath>
        </data>
    </field>
</record>

<!-- Form View -->
<record id="consulting_service_entity_view_form" model="ir.ui.view">
    <field name="name">consulting_service_entity - form</field>
    <field name="model">consulting_service.entity</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="partner_id" />
                <field name="service_id" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
                <field name="data_structure_id" />
            </xpath>
            <xpath expr="//group[@name='header_center']" position="inside">
                <label for="title" colspan="2" />
                <field name="title" colspan="2" nolabel="1" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="schema" string="Schema">
                    <field name="schema" widget="ace" />
                </page>
                <page name="raw" string="Raw">
                    <field name="raw" widget="ace" />
                </page>
            </xpath>

        </data>
    </field>
</record>

<record id="consulting_service_entity_action" model="ir.actions.act_window">
    <field name="name">Entities</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">consulting_service.entity</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="consulting_service_entity_menu"
        name="Entities"
        action="consulting_service_entity_action"
        groups="consulting_service_viewer_group"
        parent="menu_root_consulting"
        sequence="50"
    />
</odoo>
