<odoo>
<data>
<!-- Search View -->
<record id="consulting_chart_template_view_search" model="ir.ui.view">
    <field name="name">consulting_chart_template - search</field>
    <field name="model">consulting_chart_template</field>
    <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_search"
            />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<!-- Tree View -->
<record id="consulting_chart_template_view_tree" model="ir.ui.view">
    <field name="name">consulting_chart_template - tree</field>
    <field name="model">consulting_chart_template</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="materialized_view_id" />
            </xpath>
        </data>
    </field>
</record>

<!-- Form View -->
<record id="consulting_chart_template_view_form" model="ir.ui.view">
    <field name="name">consulting_chart_template - form</field>
    <field name="model">consulting_chart_template</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="materialized_view_id" />
                <field name="schema_parser_id" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="specification" string="Specifications">
                    <field name="specification" widget="ace" />
                </page>
                <page name="api" string="API">
                    <field name="payload" />
                </page>
                <page name="payload" string="Chart Creation API Payload">
                    <field name="superset_chart_creation_payload" />
                </page>
            </xpath>
        </data>
    </field>
</record>

<!-- Window Action -->
<record id="consulting_chart_template_action" model="ir.actions.act_window">
    <field name="name">Consulting Chart Templates</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">consulting_chart_template</field>
    <field name="view_mode">tree,form</field>
</record>

<!-- Menu -->
<menuitem
            id="consulting_chart_template_menu"
            name="Chart Templates"
            action="consulting_chart_template_action"
            groups="consulting_chart_template_group"
            parent="menu_consulting_configuration"
        />
</data>
</odoo>
