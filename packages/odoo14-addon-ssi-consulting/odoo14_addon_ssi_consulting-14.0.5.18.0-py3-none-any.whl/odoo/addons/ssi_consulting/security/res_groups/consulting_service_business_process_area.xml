<odoo>
    <data noupdate="0">
        <record
            id="consulting_service_business_process_area_viewer_group"
            model="res.groups"
        >
            <field name="name">Viewer</field>
            <field
                name="category_id"
                ref="consulting_service_business_process_area_workflow_module_category"
            />
        </record>
        <record
            id="consulting_service_business_process_area_user_group"
            model="res.groups"
        >
            <field name="name">User</field>
            <field
                name="category_id"
                ref="consulting_service_business_process_area_workflow_module_category"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('consulting_service_business_process_area_viewer_group'))]"
            />
        </record>
        <record
            id="consulting_service_business_process_area_validator_group"
            model="res.groups"
        >
            <field name="name">Validator</field>
            <field
                name="category_id"
                ref="consulting_service_business_process_area_workflow_module_category"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('consulting_service_business_process_area_user_group'))]"
            />
            <field
                name="users"
                eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
            />
        </record>
        <record
            id="consulting_service_business_process_area_company_group"
            model="res.groups"
        >
            <field name="name">Company</field>
            <field
                name="category_id"
                ref="consulting_service_business_process_area_data_ownership_module_category"
            />
        </record>
        <record
            id="consulting_service_business_process_area_child_company_group"
            model="res.groups"
        >
            <field name="name">Company and All Child Companies</field>
            <field
                name="category_id"
                ref="consulting_service_business_process_area_data_ownership_module_category"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('consulting_service_business_process_area_company_group'))]"
            />
        </record>
        <record id="consulting_service_business_process_area_all" model="res.groups">
            <field name="name">All</field>
            <field
                name="category_id"
                ref="consulting_service_business_process_area_data_ownership_module_category"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('consulting_service_business_process_area_company_group'))]"
            />
            <field
                name="users"
                eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
            />
        </record>
    </data>
</odoo>
