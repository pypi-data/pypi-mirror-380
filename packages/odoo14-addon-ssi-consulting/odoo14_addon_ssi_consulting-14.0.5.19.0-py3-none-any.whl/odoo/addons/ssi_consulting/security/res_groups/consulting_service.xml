<odoo>
    <data noupdate="0">
        <record id="consulting_service_viewer_group" model="res.groups">
            <field name="name">Viewer</field>
            <field
                name="category_id"
                ref="consulting_service_workflow_module_category"
            />
        </record>
        <record id="consulting_service_user_group" model="res.groups">
            <field name="name">User</field>
            <field
                name="category_id"
                ref="consulting_service_workflow_module_category"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('consulting_service_viewer_group'))]"
            />
        </record>
        <record id="consulting_service_validator_group" model="res.groups">
            <field name="name">Validator</field>
            <field
                name="category_id"
                ref="consulting_service_workflow_module_category"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('consulting_service_user_group'))]"
            />
        </record>
        <record id="consulting_service_company_group" model="res.groups">
            <field name="name">Company</field>
            <field
                name="category_id"
                ref="consulting_service_data_ownership_module_category"
            />
        </record>
        <record id="consulting_service_child_company_group" model="res.groups">
            <field name="name">Company and All Child Companies</field>
            <field
                name="category_id"
                ref="consulting_service_data_ownership_module_category"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('consulting_service_company_group'))]"
            />
        </record>
        <record id="consulting_service_all" model="res.groups">
            <field name="name">All</field>
            <field
                name="category_id"
                ref="consulting_service_data_ownership_module_category"
            />
            <field
                name="implied_ids"
                eval="[(4, ref('consulting_service_company_group'))]"
            />
        </record>
    </data>
</odoo>
