<record id="policy_template_consulting_service_approve" model="policy.template_detail">
    <field name="template_id" ref="policy_template_consulting_service" />
    <field
            name="field_id"
            search="[('model_id.model','=','consulting_service'),('name','=','approve_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','consulting_service'),('value','=','confirm')]"
        />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

