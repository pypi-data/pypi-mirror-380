<odoo>
<data>
<!-- Search View -->
<record id="consulting_schema_parser_view_search" model="ir.ui.view">
    <field name="name">consulting_schema_parser - search</field>
    <field name="model">consulting_schema_parser</field>
    <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_search"
            />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<!-- Tree View -->
<record id="consulting_schema_parser_view_tree" model="ir.ui.view">
    <field name="name">consulting_schema_parser - tree</field>
    <field name="model">consulting_schema_parser</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<!-- Form View -->
<record id="consulting_schema_parser_view_form" model="ir.ui.view">
    <field name="name">consulting_schema_parser - form</field>
    <field name="model">consulting_schema_parser</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//page[1]" position="before">
                <page name="schema" string="Schema">
                    <field name="schema" widget="ace" />
                </page>
                <page name="parser" string="Parser">
                    <field name="parser" widget="ace" />
                </page>
            </xpath>
        </data>
    </field>
</record>

<!-- Window Action -->
<record id="consulting_schema_parser_action" model="ir.actions.act_window">
    <field name="name">Schema Parsers</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">consulting_schema_parser</field>
    <field name="view_mode">tree,form</field>
</record>

<!-- Menu -->
<menuitem
            id="consulting_schema_parser_menu"
            name="Schema Parsers"
            action="consulting_schema_parser_action"
            groups="consulting_schema_parser_group"
            parent="menu_consulting_configuration"
        />
</data>
</odoo>
