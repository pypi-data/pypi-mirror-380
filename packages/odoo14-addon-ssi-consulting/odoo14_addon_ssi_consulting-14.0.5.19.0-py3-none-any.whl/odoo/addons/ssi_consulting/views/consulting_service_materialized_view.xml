<odoo>
<!-- Search View -->
<record id="consulting_service_materialized_view_view_search" model="ir.ui.view">
    <field name="name">consulting_service_materialized_view - search</field>
    <field name="model">consulting_service.materialized_view</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="title" />
                <field name="partner_id" />
                <field name="service_id" />
                <field name="materialized_view_id" />
            </xpath>
        </data>
    </field>
</record>

<!-- Tree View -->
<record id="consulting_service_materialized_view_view_tree" model="ir.ui.view">
    <field name="name">consulting_service_materialized_view - tree</field>
    <field name="model">consulting_service.materialized_view</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="partner_id" />
                <field name="title" />
                <field name="service_id" />
                <field name="materialized_view_id" />
            </xpath>
        </data>
    </field>
</record>

<!-- Form View -->
<record id="consulting_service_materialized_view_view_form" model="ir.ui.view">
    <field name="name">consulting_service_materialized_view - form</field>
    <field name="model">consulting_service.materialized_view</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="partner_id" />
                <field name="service_id" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
                <field name="materialized_view_id" />
            </xpath>
            <xpath expr="//group[@name='header_center']" position="inside">
                <label for="title" colspan="2" />
                <field name="title" colspan="2" nolabel="1" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="schema" string="Schema">
                    <field name="schema" widget="ace" />
                </page>
                <page name="entity" string="Entities">
                    <button
                            name="action_create_entities"
                            string="Create Entities"
                            type="object"
                            class="oe_highlight"
                            icon="fa-gears"
                        />
                    <field name="entity_ids" />
                </page>
                <page name="raw" string="Raw">
                    <group name="raw_1" colspan="4" col="2">
                        <field name="s3_prefix" />
                        <field name="google_sheet_url" widget="url" />
                    </group>
                    <button
                            name="action_build_pandas"
                            type="object"
                            string="Build"
                            class="oe_highlight"
                            icon="fa-gears"
                        />
                    <field name="raw" />
                </page>
                <page name="data" string="Data">
                    <field name="mv_text" widget="ace" />
                </page>
                <page name="json" string="JSON">
                    <field name="mv_json" widget="ace" />
                </page>
            </xpath>

        </data>
    </field>
</record>

<record id="consulting_service_materialized_view_action" model="ir.actions.act_window">
    <field name="name">Materialized Views</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">consulting_service.materialized_view</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="consulting_service_materialized_view_menu"
        name="Materialized Views"
        action="consulting_service_materialized_view_action"
        groups="consulting_service_viewer_group"
        parent="menu_root_consulting"
        sequence="50"
    />
</odoo>
