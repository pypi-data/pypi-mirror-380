<odoo>
<data>
<!-- Search View -->
<record id="consulting_data_structure_view_search" model="ir.ui.view">
    <field name="name">consulting_data_structure - search</field>
    <field name="model">consulting_data_structure</field>
    <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_search"
            />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<!-- Tree View -->
<record id="consulting_data_structure_view_tree" model="ir.ui.view">
    <field name="name">consulting_data_structure - tree</field>
    <field name="model">consulting_data_structure</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<!-- Form View -->
<record id="consulting_data_structure_view_form" model="ir.ui.view">
    <field name="name">consulting_data_structure - form</field>
    <field name="model">consulting_data_structure</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//page[1]" position="before">
                <page name="schema" string="Schema">
                    <field name="schema" widget="ace" />
                </page>
                <page name="dependencies" string="Dependencies">
                    <separator string="Direct Dependencies" />
                    <field name="direct_dependency_ids" />
                    <separator string="All Dependencies" />
                    <field name="all_dependency_ids" />
                </page>
                <page name="example_data" string="Example Data">
                    <separator string="Input Example Data (CSV Format)" />
                    <field
                                name="example_data"
                                placeholder="Enter example data in CSV format here..."
                            />
                    <separator string="Rendered Example Data" />
                    <field name="example_data_display" readonly="1" widget="ace" />
                </page>
            </xpath>
        </data>
    </field>
</record>

<!-- Window Action -->
<record id="consulting_data_structure_action" model="ir.actions.act_window">
    <field name="name">Consulting Data Structures</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">consulting_data_structure</field>
    <field name="view_mode">tree,form</field>
</record>

<!-- Menu -->
<menuitem
            id="consulting_data_structure_menu"
            name="Data Structures"
            action="consulting_data_structure_action"
            groups="consulting_data_structure_group"
            parent="menu_consulting_configuration"
        />
</data>
</odoo>
