<odoo>
<data>
<!-- Search View -->
<record id="consulting_report_template_view_search" model="ir.ui.view">
    <field name="name">consulting_report_template_view - search</field>
    <field name="model">consulting_report_template</field>
    <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_search"
            />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<!-- Tree View -->
<record id="consulting_report_template_view_tree" model="ir.ui.view">
    <field name="name">consulting_report_template_view - tree</field>
    <field name="model">consulting_report_template</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="service_type_id" />
            </xpath>
        </data>
    </field>
</record>

<!-- Form View -->
<record id="consulting_report_template_view_form" model="ir.ui.view">
    <field name="name">consulting_report_template_view - form</field>
    <field name="model">consulting_report_template</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="service_type_id" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="materialized_view" string="Materialized Views">
                    <field name="materialized_view_ids" />
                    <field name="data_structure_ids" />
                </page>
                <page name="system_prompting" string="System Prompting">
                    <group name="system_prompting_1" colspan="4" col="2">
                        <field
                                    name="system_prompting_schema_parser_id"
                                    string="Schema Parser"
                                    domain="[('category_id','=',%(ssi_consulting.schema_parser_category_sp)d)]"
                                />
                        <field
                                    name="system_prompting_s3_url"
                                    string="S3 URL"
                                    widget="url"
                                />
                    </group>
                    <separator string="Specification" />
                    <field name="system_prompting_specification" widget="ace" />
                    <group
                                name="system_prompting_2"
                                colspan="4"
                                col="2"
                                string="Specification Validation"
                            >
                        <field
                                    name="system_prompting_specification_valid"
                                    string="Valid?"
                                />
                        <field
                                    name="system_prompting_specification_error_message"
                                    string="Error Message"
                                />
                    </group>
                    <separator string="Parsing" />
                    <field name="system_prompting" widget="ace" />
                    <group
                                name="system_prompting_3"
                                colspan="4"
                                col="2"
                                string="Parsing Validation"
                            >
                        <field name="system_prompting_valid" string="Valid?" />
                        <field
                                    name="system_prompting_error_message"
                                    string="Error Message"
                                />
                    </group>
                </page>
                <page name="user_prompting" string="User Prompting">
                    <group name="user_prompting_1" colspan="4" col="2">
                        <field
                                    name="user_prompting_schema_parser_id"
                                    string="Schema Parser"
                                    domain="[('category_id','=',%(ssi_consulting.schema_parser_category_up)d)]"
                                />
                        <field
                                    name="user_prompting_s3_url"
                                    string="S3 URL"
                                    widget="url"
                                />
                    </group>
                    <separator string="Specification" />
                    <field name="user_prompting_specification" widget="ace" />
                    <group
                                name="user_prompting_2"
                                colspan="4"
                                col="2"
                                string="Specification Validation"
                            >
                        <field
                                    name="user_prompting_specification_valid"
                                    string="Valid?"
                                />
                        <field
                                    name="user_prompting_specification_error_message"
                                    string="Error Message"
                                />
                    </group>
                    <separator string="Parsing" />
                    <field name="user_prompting" widget="ace" />
                    <group
                                name="user_prompting_3"
                                colspan="4"
                                col="2"
                                string="Parsing Validation"
                            >
                        <field name="user_prompting_valid" string="Valid?" />
                        <field
                                    name="user_prompting_error_message"
                                    string="Error Message"
                                />
                    </group>
                </page>
                <page name="style" string="Style">
                    <group name="style_1" colspan="4" col="2">
                        <field
                                    name="style_schema_parser_id"
                                    domain="[('category_id','=',%(ssi_consulting.schema_parser_category_rs)d)]"
                                />
                    </group>
                    <separator string="Specification" />
                    <field name="style_specification" />
                    <group
                                name="style_2"
                                colspan="4"
                                col="2"
                                string="Schema Validation"
                            >
                        <field name="style_valid" string="Valid?" />
                        <field name="style_error_message" string="Error Message" />
                    </group>
                    <separator string="Result" />
                    <field name="style_parsing_result" />
                    <group
                                name="style_3"
                                colspan="4"
                                col="2"
                                string="Parsing Validation"
                            >
                        <field name="style_parsing_valid" string="Valid?" />
                        <field
                                    name="style_parsing_error_message"
                                    string="Error Message"
                                />
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

<!-- Window Action -->
<record id="consulting_report_template_view_action" model="ir.actions.act_window">
    <field name="name">Consulting Report Templates</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">consulting_report_template</field>
    <field name="view_mode">tree,form</field>
</record>

<!-- Menu -->
<menuitem
            id="consulting_report_template_view_menu"
            name="Report Templates"
            action="consulting_report_template_view_action"
            groups="consulting_report_template_group"
            parent="menu_consulting_configuration"
        />
</data>
</odoo>
