<odoo>
    <data>
        <!-- Search View -->
        <record id="consulting_service_view_search" model="ir.ui.view">
            <field name="name">consulting_service - search</field>
            <field name="model">consulting_service</field>
            <field
                name="inherit_id"
                ref="ssi_transaction_mixin.mixin_transaction_view_search"
            />
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                </data>
            </field>
        </record>

        <!-- Tree View -->
        <record id="consulting_service_view_tree" model="ir.ui.view">
            <field name="name">consulting_service - tree</field>
            <field name="model">consulting_service</field>
            <field
                name="inherit_id"
                ref="ssi_transaction_mixin.mixin_transaction_view_tree"
            />
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='company_id']" position="after">
                        <field name="partner_id" widget="many2one_avatar" />
                        <field
                            name="contact_partner_id"
                            widget="many2one_avatar"
                            optional="hide"
                        />
                        <field name="type_id" />
                        <field name="date" />
                        <field name="date_start" />
                        <field name="date_end" />
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Form View -->
        <record id="consulting_service_view_form" model="ir.ui.view">
            <field name="name">consulting_service - form</field>
            <field name="model">consulting_service</field>
            <field name="mode">primary</field>
            <field
                name="inherit_id"
                ref="ssi_transaction_mixin.mixin_transaction_view_form"
            />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='user_id']" position="after">
                        <field name="type_id" />
                    </xpath>
                    <xpath expr="//group[@name='header_right']" position="inside">
                        <field name="partner_id" widget="many2one_avatar" />
                        <field name="date" />
                        <field name="date_start" />
                        <field name="date_end" />
                    </xpath>
                    <xpath expr="//page[1]" position="before">
                        <page name="external" string="External Tools">
                           <group name="external_3" colspan="4" col="2" string="S3">
                                <field name="s3_endpoint" />
                                <field name="s3_bucket" />
                            </group>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Window Action -->
        <record id="consulting_service_action" model="ir.actions.act_window">
            <field name="name">Consulting Services</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">consulting_service</field>
            <field name="view_mode">tree,form</field>
        </record>

<menuitem
            id="consulting_service_issue"
            name="Service"
            action="consulting_service_action"
            groups="consulting_service_viewer_group"
            parent="menu_root_consulting"
            sequence="10"
        />
    </data>
</odoo>
