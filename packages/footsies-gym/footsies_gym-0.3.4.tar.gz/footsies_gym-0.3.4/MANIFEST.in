# Include package metadata files
include README.md
include LICENSE.txt
include requirements.txt
include pyproject.toml

# Binaries are downloaded automatically - not included in package
# Explicitly exclude the entire binaries directory
prune footsiesgym/binaries

# Include protocol buffer files and generated Python files
recursive-include footsiesgym/protoc *.proto
recursive-include footsiesgym/footsies *.proto
recursive-include footsiesgym/footsies *.json
recursive-include footsiesgym/footsies/game/proto *.py

# Include configuration files
include .gitignore
include setup.sh

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude experiment results and checkpoints
exclude ray_results
recursive-exclude ray_results *
recursive-exclude checkpoints *
exclude *.log

# Exclude development directories that shouldn't be in the package
prune .git
prune experiments
prune scripts
prune testing
