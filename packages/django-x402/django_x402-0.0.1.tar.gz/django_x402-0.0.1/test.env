# Test environment variables for django-x402
# Usage: source test.env before running tests
# Or use: env $(cat test.env | xargs) pytest

# Anvil RPC Configuration
# Set ANVIL_FORK_URL to enable the Anvil integration test
# This should point to a Base mainnet RPC endpoint for forking
export ANVIL_FORK_URL=https://mainnet.base.org

# Local RPC URL (where Anvil runs locally)
export ANVIL_RPC_URL=http://localhost:8545

# Private key for testing (Anvil's default account #0)
# DO NOT use this key in production!
export X402_SIGNER_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# RPC URL for the LocalFacilitator to connect to
export X402_RPC_URL=http://localhost:8545
