<SetupScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '8dp'
        spacing: '8dp'
        BoxLayout:
            size_hint_y: None
            height: '44dp'
            Label:
                text: 'Available Controllers'
            Button:
                text: 'Refresh'
                on_release: root.refresh_addresses()
        ScrollView:
            size_hint_y: .3
            do_scroll_x: False
            GridLayout:
                id: addr_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '36dp'
                row_force_default: True
        BoxLayout:
            size_hint_y: None
            height: '44dp'
            spacing: '8dp'
            TextInput:
                id: address
                text: root.address
                on_text: root.address = self.text
                hint_text: 'Controller address (e.g. 192.168.0.50)'
            Button:
                text: 'Connect'
                disabled: root.state.connected if root.state else False
                on_release: root.connect()
            Button:
                text: 'Disconnect'
                disabled: (not root.state.connected) if root.state else True
                on_release: root.disconnect()
            Label:
                size_hint_x: None
                width: '160dp'
                text: root.connection_status
                color: [0.2, 1, 0.2, 1] if 'Connected' in root.connection_status else [1, 0.4, 0.4, 1]

