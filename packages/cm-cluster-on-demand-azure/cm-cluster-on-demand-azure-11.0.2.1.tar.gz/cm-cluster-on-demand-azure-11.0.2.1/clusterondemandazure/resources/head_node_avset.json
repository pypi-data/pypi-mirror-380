{
    "comments": "The name is individualized per cluster to avoid conflicts",
    "type": "Microsoft.Compute/availabilitySets",
    "name": "[variables('headNodeAvailabilitySetName')]",
    "apiVersion": "2020-06-01",
    "location": "[parameters('region')]",
    "sku": {
        "name": "Aligned"
    },
    "tags" : {
        "BCM Resource": true,
        "BCM Cluster": "[parameters('cluster_name')]"
    },
    "properties": {
        "PlatformFaultDomainCount": 2,
        "PlatformUpdateDomainCount": 2
    }
}