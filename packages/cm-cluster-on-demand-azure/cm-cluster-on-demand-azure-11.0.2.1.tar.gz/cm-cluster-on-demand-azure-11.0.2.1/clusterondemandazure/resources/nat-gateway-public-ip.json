{
    "condition": "[equals(parameters('configure_nat_gateway'),'true')]",
    "type": "Microsoft.Network/publicIPAddresses",
    "apiVersion": "2024-05-01",
    "name": "[parameters('nat_gateway_public_ip_name')]",
    "location": "[parameters('region')]",
    "tags": {
        "BCM Cluster": "[parameters('cluster_name')]",
        "BCM Resource": true
    },
    "sku": {
        "name": "Standard",
        "tier": "Regional"
    },
    "properties": {
        "publicIPAllocationMethod": "Static",
        "idleTimeoutInMinutes": 4,
        "ipTags": [],
        "ddosSettings": {
            "protectionMode": "VirtualNetworkInherited"
        }
    }
}
