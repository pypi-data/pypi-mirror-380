{
    "args": ["my-hostname.net"],
    "facts": {
        "server.Hostname": "nope",
        "files.File": {
            "path=/etc/hostname": {}
        },
        "files.Directory": {
            "path=/etc": true
        },
        "server.Which": {
            "command=hostnamectl": "hostnamectl"
        }
    },
    "commands": [
        "hostnamectl set-hostname my-hostname.net"
    ]
}
