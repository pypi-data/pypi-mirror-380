{
    "require_platform": ["Darwin", "Linux"],
    "args": ["tmp/testfile", "tmp2"],
    "kwargs": {"overwrite": true},
    "facts": {
        "files.File": {
            "path=tmp/testfile": {
                "mode": 600
            },
            "path=tmp2/testfile": {
                "mode": 600
            }
        },
        "files.Directory": {
            "path=tmp2": {
                "mode": 700
            }
        }
    },
    "commands": ["rm -rf tmp2/testfile", "mv tmp/testfile tmp2"]
}
