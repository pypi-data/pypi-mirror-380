{
    "args": ["this_is_a_command"],
    "kwargs": {
        "cron_name": "a-name"
    },
    "facts": {
        "crontab.Crontab": {
            "user=None": {
                "apt update": {
                    "minute": "*",
                    "hour": "*",
                    "month": "*",
                    "day_of_month": "*",
                    "day_of_week": "*",
                    "comments": []
                }
            }
        }
    },
    "commands": [
        "crontab -l  > _tempfile_",
        "echo '' >> _tempfile_",
        "echo '# pyinfra-name=a-name' >> _tempfile_",
        "echo '* * * * * this_is_a_command' >> _tempfile_",
        "crontab  _tempfile_"
    ]
}
