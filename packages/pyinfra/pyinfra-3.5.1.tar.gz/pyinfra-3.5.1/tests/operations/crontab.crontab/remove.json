{
    "args": ["this_is_a_command"],
    "kwargs": {
        "present": false
    },
    "facts": {
        "crontab.Crontab": {
            "user=None": {
                "this_is_a_command": {
                    "minute": "*",
                    "hour": "*",
                    "month": "*",
                    "day_of_week": "*",
                    "day_of_month": "*",
                    "comments": []
                }
            }
        }
    },
    "commands": [
        "crontab -l  > _tempfile_",
        "sed -i.a-timestamp '/.*this_is_a_command.*/d' _tempfile_ && rm -f _tempfile_.a-timestamp",
        "crontab  _tempfile_"
    ]
}
