{
    "args": ["remote-host.net"],
    "facts": {
        "server.Home": "/home/pyinfra",
        "files.Directory": {
            "path=/home/pyinfra/.ssh": {
                "mode": 700
            }
        },
        "files.FindInFile": {
            "interpolate_variables=False, path=/home/pyinfra/.ssh/known_hosts, pattern=remote-host.net": []
        }
    },
    "commands": [
        "ssh-keyscan -p 22 remote-host.net >> /home/pyinfra/.ssh/known_hosts"
    ]
}
