        "watch": {
          "default": false,
          "description": "Whether to watch the file for changes and reload automatically.",
          "title": "Watch",
          "type": "boolean"
        }
      },
      "required": [
        "description",
        "path"
      ],
      "title": "FilePrompt",
      "type": "object"
    },
