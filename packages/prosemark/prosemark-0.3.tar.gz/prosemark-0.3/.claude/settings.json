{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit|Update",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff format --check"
          },
          {
            "type": "command",
            "command": "uv run ruff check"
          },
          {
            "type": "command",
            "command": "uv run mypy src tests"
          }

        ]
      }
    ],
    "file-change": [
      {
        "files": ["pyproject.toml", "uv.lock"],
        "command": "uv sync --all-groups"
      }
    ]
  }
}
