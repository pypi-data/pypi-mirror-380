if sol_df is not None:
    print("æˆåŠŸè·å– SOL æ•°æ®ï¼")
    
    # æŸ¥çœ‹æ•°æ®å‰5è¡Œ
    print("æ•°æ®é¢„è§ˆ:")
    print(sol_df.head())
    
    # è®¡ç®—å½“å¤©çš„å¹³å‡æ”¶ç›˜ä»·
