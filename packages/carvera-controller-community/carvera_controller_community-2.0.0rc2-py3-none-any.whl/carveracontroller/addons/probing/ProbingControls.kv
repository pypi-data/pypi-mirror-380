<EmptySpace@BoxLayout>
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    size: dp(100), dp(100)
    size_hint: None, None

<ProbeButton>:
    background_color: 0,0,0,0  # the last zero is the critical one, make invisible
    image: ''
    canvas.before:
        Color:
            rgba: (88/255,88/255,88/255,1) if self.state=='normal' else (50/255,164/255,206/255,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(3),]
    Image:
        id: img
        source: root.image
        size: self.parent.size
        fit_mode: 'scale-down'
        pos: self.parent.pos
    

<ProbeSettingLabel@GridLayout>:
    cols:2
    rows:1
    spacing: dp(3)
    padding: dp(3)
    size_hint_max_x: dp(300)
    size_hint_max_y: dp(33)
    label_text:''
    Label:
        text: root.label_text
        size_hint_min_x: dp(90)
        halign: 'right'
        valign: 'middle'
        text_size: self.size
        multiline: False

<ProbeTextInput@TextInput>:
    multiline: False
    halign:'right'
    input_type: 'number'
    input_filter: 'float'
    padding: [4, 0, 5, 0]


<JogButton@Button>:
    background_color: 0,0,0,0  # the last zero is the critical on, make invisible
    size: dp(33), dp(33)
    size_hint: None, None
    image: ''
    text:''
    canvas.before:
        Color:
            rgba: (88/255,88/255,88/255,1) if self.state=='normal' else (50/255,164/255,206/255,1)  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(3),]