<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_contract_force_oc_integration" model="ir.ui.view">
      <field name="name">contract.force.oc.integration.form.view</field>
      <field name="model">contract.force.oc.integration.wizard</field>
      <field name="arch" type="xml">
        <form>
          <div>
            <p>Do you want to force the creation of the Opencell subscription?</p>
          </div>
          <footer>
            <button type="object" name="create_subscription" string="Force"/>
            <button string="Cancel" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_contract_force_oc_integration_wizard" model="ir.actions.act_window">
        <field name="name">Force OC integration</field>
        <field name="res_model">contract.force.oc.integration.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <record id="view_contract_force_oc_integration_wizard_button" model="ir.ui.view">
      <field name="name">contract.force.oc.integration.wizard.button</field>
      <field name="model">contract.contract</field>
      <field name="inherit_id" ref="contract.contract_contract_form_view"/>
      <field name="arch" type="xml">
        <button name="action_contract_send" position="after">
          <button name="%(action_contract_force_oc_integration_wizard)d" string="Force OC integration" type="action" context="{'default_active_id': active_id}" groups="somconnexio.group_somconnexio_admin"/>
        </button>
      </field>
    </record>
  </data>
</odoo>
