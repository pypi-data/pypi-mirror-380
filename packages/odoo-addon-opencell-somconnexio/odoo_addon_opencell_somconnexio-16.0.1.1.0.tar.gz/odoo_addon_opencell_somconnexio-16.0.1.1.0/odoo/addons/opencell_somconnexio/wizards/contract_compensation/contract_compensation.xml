<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_contract_compensation_wizard" model="ir.ui.view">
      <field name="name">Compensation Assistant</field>
      <field name="model">contract.compensation.wizard</field>
      <field name="inherit_id" ref="somconnexio.view_form_contract_compensation_wizard"/>
      <field name="arch" type="xml">
        <field name="type" position="after">
          <field name="is_opencell_compensation" invisible="1"/>
        </field>
        <button name="button_compensate" position="after">
          <button type="object" name="opencell_compensate" string="OK" states="details"/>
        </button>
      </field>
    </record>
  </data>
</odoo>
