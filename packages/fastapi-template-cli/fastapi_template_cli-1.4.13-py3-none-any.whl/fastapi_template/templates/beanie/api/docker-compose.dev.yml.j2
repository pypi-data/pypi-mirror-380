
services:
  web:
    build:
      context: .
      dockerfile: docker/Dockerfile
      args:
        INSTALL_EXTRAS: dev
    env_file:
      - .env.dev
    ports:
      - "8000:8000"
    volumes:
      - ./app:/app/app  # Mount source for live reload
    command: >
      uvicorn app.main:app
      --host 0.0.0.0
      --port 8000
      --reload
    depends_on:
      - mongo

  mongo:
    image: mongo:7
    ports:
      - "27017:27017"
    env_file:
      - .env.dev
    volumes:
      - mongo_data:/data/db
    restart: unless-stopped

volumes:
  mongo_data:
