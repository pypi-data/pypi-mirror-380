# Простой калькулятор

def add(a, b):
    return a + b

def subtract(a, b):
    return a - b

def multiply(a, b):
    return a * b

def divide(a, b):
    if b == 0:
        print("Ошибка: нельзя делить на ноль!")
        return None
    return a / b

# Примеры использования
print("Калькулятор PyLite")
print("5 + 3 =", add(5, 3))
print("10 - 4 =", subtract(10, 4))
print("6 * 7 =", multiply(6, 7))
print("15 / 3 =", divide(15, 3))
print("10 / 0 =", divide(10, 0))
