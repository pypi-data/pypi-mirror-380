<odoo>
<record id="faktur_pajak_keluaran_view_form" model="ir.ui.view">
    <field name="name">faktur_pajak_keluaran - Klik Pajak form</field>
    <field name="model">faktur_pajak_keluaran</field>
    <field
            name="inherit_id"
            ref="ssi_l10n_id_taxform_faktur_pajak.faktur_pajak_keluaran_view_form"
        />
    <field name="arch" type="xml">
        <xpath expr="//field[@name='manual_number_ok']" position="after">
            <field name="change_backend_ok" order="100" />
        </xpath>
        <xpath expr="//page[@name='efaktur']" position="after">
            <page
                    name="klikpajak"
                    string="Klik Pajak"
                    attrs="{'invisible': [('state', 'not in', ['open','done'])]}"
                >
                <button
                        name="action_klikpajak_submit_sale_invoice"
                        type="object"
                        string="Submit"
                        class="oe_highlight"
                        colspan="2"
                        attrs="{'invisible':[('klik_pajak_submit_ok','=',False)]}"
                    />
                <button
                        name="action_klikpajak_approve_sale_invoice"
                        type="object"
                        string="Approve"
                        class="oe_highlight"
                        colspan="2"
                        attrs="{'invisible':[('klik_pajak_approve_ok','=',False)]}"
                    />
                <button
                        name="action_klikpajak_cancel_sale_invoice"
                        type="object"
                        string="Cancel"
                        colspan="2"
                        attrs="{'invisible':[('klik_pajak_cancel_ok','=',False)]}"
                    />
                <button
                        name="action_klikpajak_resubmit_sale_invoice"
                        type="object"
                        string="Re-Submit"
                        colspan="2"
                        attrs="{'invisible':[('klik_pajak_resubmit_ok','=',False)]}"
                    />
                <button
                        name="action_redownload_klikpajak_pdf"
                        type="object"
                        string="Re-Download PDF"
                        colspan="2"
                        attrs="{'invisible':[('klik_pajak_resubmit_ok','=',False)]}"
                    />
                <group name="klikpajak_1" colspan="4" col="2">
                    <field
                            name="klikpajak_backend_id"
                            attrs="{'invisible': [('change_backend_ok', '=', False )]}"
                        />
                    <field name="klikpajak_id" string="ID" />
                    <field name="klik_pajak_submit_ok" invisible="1" />
                    <field name="klik_pajak_approve_ok" invisible="1" />
                    <field name="klik_pajak_cancel_ok" invisible="1" />
                    <field name="klik_pajak_resubmit_ok" invisible="1" />
                    <field name="klikpajak_invoice_status" string="Invoice Status" />
                    <field name="klikpajak_approval_status" string="Approval Status" />
                    <field name="klikpajak_cancel_status" string="Cancel Status" />
                    <field name="klikpajak_qrcode_link" string="QR Link" widget="url" />
                    <field
                            name="klikpajak_invoice_link"
                            string="Invoice Link"
                            widget="url"
                        />
                </group>
            </page>
        </xpath>
    </field>
</record>
</odoo>
