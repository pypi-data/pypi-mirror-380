renameBoundary
{
    //defaultType     patch;
    newPatchNames
    {
        "inlet_1.*"
        {
        	newName inlet_1;
			type  	patch;
		}
        "inlet_2.*"
        {
        	newName inlet_2;
			type  	wall;
		}
        "walls.*"
        {
        	newName walls;
			type  	wall;
		}
    }
}

