FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha1;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0.0;

boundaryField
{
    "(inlet_1|inlet_2|inlet_3|inlet_4)"
    {
     type        inletOutlet;
     inletValue  uniform 1;
     value       uniform 0;
    }

    "(walls|features|contact)"
    {
        type           zeroGradient;
    }
}

