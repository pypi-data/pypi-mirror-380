<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_form_contract_invoice_payment_wizard" model="ir.ui.view">
    <field name="name">Contract Invoice Payment Wizard</field>
    <field name="model">contract.invoice.payment.wizard</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="state" invisible="1"/>
          <field name="data" string="CSV file" states="load"/>
          <field name="errors" string="Errors" states="errors" readonly="1"/>
        </group>
        <footer>
          <button type="object" name="run_wizard" string="Import" states="load" class="btn-primary"/>
          <button special="cancel" string="Accept" class="btn-default" states="errors"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_contract_payment_wizard" model="ir.actions.act_window">
    <field name="name">Contract Invoice Payment Wizard</field>
    <field name="res_model">contract.invoice.payment.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_form_contract_invoice_payment_wizard"/>
    <field name="target">new</field>
  </record>

  <menuitem 
    id="contract_invoice_payement_menu" 
    name="Contract Invoice Payment"
    parent="account.menu_finance_receivables" 
    action="action_contract_payment_wizard" 
    sequence="15"/>
</odoo>
