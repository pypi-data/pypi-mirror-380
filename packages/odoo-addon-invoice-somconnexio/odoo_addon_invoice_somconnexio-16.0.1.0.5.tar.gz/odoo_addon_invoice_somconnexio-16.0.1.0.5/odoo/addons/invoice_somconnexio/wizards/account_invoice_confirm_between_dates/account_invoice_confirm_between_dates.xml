<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_form_account_invoice_confirm_between_dates_wizard" model="ir.ui.view">
    <field name="name">Account Invoice Confirm Between Dates Wizard</field>
    <field name="model">account.invoice.confirm.between.dates</field>
    <field name="arch" type="xml">
      <form>
        <group>
          <field name="journal_id"/>
        </group>
        <group>
          <field name="start_date"/>
          <field name="end_date"/>
        </group>
        <footer>
          <button type="object" name="run_wizard" string="Confirm" class="btn-primary"/>
          <button special="cancel" string="Cancel" class="btn-default"/>
        </footer>
      </form>
    </field>
  </record>
  <record id="action_account_invoice_confirm_between_dates_wizard" model="ir.actions.act_window">
    <field name="name">Confirm Draft Invoices Between Dates</field>
    <field name="res_model">account.invoice.confirm.between.dates</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_form_account_invoice_confirm_between_dates_wizard"/>
    <field name="target">new</field>
  </record>
  <menuitem 
    id="menu_action_account_invoice_confirm_between_dates_wizard"
    name="Confirm Invoices Between Dates" 
    action="action_account_invoice_confirm_between_dates_wizard" 
    parent="account.menu_finance_receivables" 
    sequence="100"/>
</odoo>
