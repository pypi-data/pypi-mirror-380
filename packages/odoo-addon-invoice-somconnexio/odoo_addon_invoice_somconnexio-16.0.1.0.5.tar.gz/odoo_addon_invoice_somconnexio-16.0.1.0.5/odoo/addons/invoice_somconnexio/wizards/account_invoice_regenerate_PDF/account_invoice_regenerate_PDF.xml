<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_form_account_invoice_confirm_between_dates_wizard" model="ir.ui.view">
    <field name="name">Account Invoice Regenerate PDF</field>
    <field name="model">account.invoice.regenerate.pdf</field>
    <field name="arch" type="xml">
      <form>
        <p>Are you sure you want to regenerate the PDF of the invoice?</p>
        <footer>
          <button type="object" name="run" string="Confirm" class="btn-primary"/>
          <button special="cancel" string="Cancel" class="btn-default"/>
        </footer>
      </form>
    </field>
  </record>
  <record id="action_account_invoice_confirm_between_dates_wizard" model="ir.actions.act_window">
    <field name="name">Regenerate invoice PDF</field>
    <field name="res_model">account.invoice.regenerate.pdf</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_form_account_invoice_confirm_between_dates_wizard"/>
    <field name="target">new</field>
  </record>
  <record id="view_invoice_regenerate_PDF_button" model="ir.ui.view">
    <field name="name">account.move.form.regenerate.pdf.wizard.button</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <header position="inside">
          <button
            id="button_regenerate_invoice_pdf"
            name="%(action_account_invoice_confirm_between_dates_wizard)d"
            string="Regenerate PDF"
            type="action"
            context="{'default_active_id': active_id}"
            groups="somconnexio.group_somconnexio_admin"
          />
      </header>
    </field>
  </record>
</odoo>
