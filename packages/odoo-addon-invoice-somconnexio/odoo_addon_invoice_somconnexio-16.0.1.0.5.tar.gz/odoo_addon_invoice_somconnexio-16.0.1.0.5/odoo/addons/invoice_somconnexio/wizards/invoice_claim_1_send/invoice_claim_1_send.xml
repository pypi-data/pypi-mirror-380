<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_form_invoice_claim_1_send_wizard" model="ir.ui.view">
    <field name="name">Invoice Claim 1 Send Wizard</field>
    <field name="model">invoice.claim.1.send.wizard</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <p>Send Claim 1 Email?</p>
        </sheet>
        <footer>
          <button type="object" name="button_send" string="Send" class="btn-primary"/>
          <button special="cancel" string="Cancel" class="btn-default"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_invoice_claim_1_send_wizard" model="ir.actions.act_window">
    <field name="name">Send Claim 1 Email</field>
    <field name="res_model">invoice.claim.1.send.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_form_invoice_claim_1_send_wizard"/>
    <field name="target">new</field>
  </record>
</odoo>
