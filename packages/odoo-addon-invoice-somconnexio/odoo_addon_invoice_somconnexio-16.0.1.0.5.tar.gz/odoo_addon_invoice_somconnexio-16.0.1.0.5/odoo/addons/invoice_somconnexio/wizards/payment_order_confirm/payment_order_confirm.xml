<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="payment_order_confirm_form" model="ir.ui.view">
    <field name="name">payment_order_confirm.form</field>
    <field name="model">payment.order.confirm</field>
    <field name="arch" type="xml">
      <form string="Payments Confirmation">
        <p>This wizard will confirm payment of selected orders.</p>
        <footer>
          <button type="object" name="run" string="Confirm" class="btn-primary"/>
          <button special="cancel" string="Cancel" class="btn-default"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_payment_order_confirm" model="ir.actions.act_window">
    <field name="name">Confirm Payments</field>
    <field name="res_model">payment.order.confirm</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="payment_order_confirm_form"/>
    <field name="target">new</field>
    <field name="binding_model_id" ref="account_payment_order.model_account_payment_order"/>
    <field name="binding_view_types">list</field>
  </record>
</odoo>
