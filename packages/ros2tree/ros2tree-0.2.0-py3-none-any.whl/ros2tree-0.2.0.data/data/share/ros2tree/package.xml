<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>ros2tree</name>
  <version>0.2.0</version>
  <description>ROS2 command extension for displaying topics and nodes in tree view</description>
  <maintainer email="developer@example.com">ROS2 Tree Developer</maintainer>
  <license>Apache-2.0</license>

  <!-- ros2cli is provided by the ROS2 environment -->

  <!-- Linting and style tests -->
  <test_depend>ament_copyright</test_depend>
  <test_depend>ament_flake8</test_depend>
  <test_depend>ament_pep257</test_depend>

  <!-- Python development tools -->
  <test_depend>black</test_depend>
  <test_depend>python3-flake8</test_depend>

  <!-- Testing framework -->
  <test_depend>python3-pytest</test_depend>
  <test_depend>python3-pytest-cov</test_depend>

  <!-- ROS2 packages for testing -->
  <test_depend>demo_nodes_cpp</test_depend>
  <test_depend>demo_nodes_py</test_depend>

  <export>
    <build_type>ament_python</build_type>
  </export>
</package>