<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_tree_lead_line_mobile_sr" model="ir.ui.view">
      <field name="name">crm.lead.line tree view mobile SR</field>
      <field name="model">crm.lead.line</field>
      <field name="inherit_id" ref="somconnexio.view_tree_lead_line_mobile"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="before">
          <field name="subscription_request_id"/>
        </field>
      </field>
    </record>
    <record id="view_form_lead_line_mobile_sr" model="ir.ui.view">
      <field name="name">crm.lead.line form view mobile SR</field>
      <field name="model">crm.lead.line</field>
      <field name="inherit_id" ref="somconnexio.view_form_lead_line_mobile"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="before">
          <field name="subscription_request_id"/>
        </field>
      </field>
    </record>
    <record id="view_tree_lead_line_broadband_sr" model="ir.ui.view">
      <field name="name">crm.lead.line tree view broadband SR</field>
      <field name="model">crm.lead.line</field>
      <field name="inherit_id" ref="somconnexio.view_tree_lead_line_broadband"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="before">
          <field name="subscription_request_id"/>
        </field>
      </field>
    </record>
    <record id="view_form_lead_line_broadband_sr" model="ir.ui.view">
      <field name="name">crm.lead.line form view broadband SR</field>
      <field name="model">crm.lead.line</field>
      <field name="inherit_id" ref="somconnexio.view_form_lead_line_broadband"/>
      <field name="arch" type="xml">
        <field name="partner_id" position="before">
          <field name="subscription_request_id"/>
        </field>
      </field>
    </record>
    <record id="crm_lead_line_search_view_sr" model="ir.ui.view">
      <field name="name">crm.lead.line search view SR</field>
      <field name="model">crm.lead.line</field>
      <field name="inherit_id" ref="somconnexio.crm_lead_line_search_view"/>
      <field name="arch" type="xml">
        <field name="name" position="attributes">
          <attribute name="filter_domain">
                        ['|', '|', '|', '|', '|', 
                            ('partner_id', 'ilike', self),
                            ('subscription_request_id', 'ilike', self),
                            ('product_id', 'ilike', self),
                            ('mobile_isp_info_phone_number', 'ilike', self),
                            ('broadband_isp_info_phone_number', 'ilike', self),
                            ('lead_id.partner_id.vat', 'ilike', self),
                        ]
                    </attribute>
        </field>
      </field>
    </record>
  </data>
</odoo>
