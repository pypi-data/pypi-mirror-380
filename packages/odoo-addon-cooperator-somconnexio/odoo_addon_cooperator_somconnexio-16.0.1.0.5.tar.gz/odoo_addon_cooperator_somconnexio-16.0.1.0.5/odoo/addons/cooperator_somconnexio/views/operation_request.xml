<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="operation_request_form_view" model="ir.ui.view">
    <field name="name">operation.request.form.view</field>
    <field name="model">operation.request</field>
    <field name="inherit_id" ref="cooperator.operation_request_form"/>
    <field name="arch" type="xml">
      <field name="operation_type" position="after">
        <field name="termination_reason" attrs="{'invisible': [('operation_type','!=','sell_back')],                          'required': [('operation_type', '=', 'sell_back')]}" options="{'no_create': True}"/>
        <field name="termination_considerations" attrs="{'invisible': [('operation_type','!=','sell_back')]}"/>
      </field>
    </field>
  </record>
</odoo>
