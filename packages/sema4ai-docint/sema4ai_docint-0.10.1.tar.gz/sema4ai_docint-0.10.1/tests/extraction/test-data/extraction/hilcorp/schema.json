{
  "type": "object",
  "properties":
  {
      "invoice_number":
      {
          "type": "string"
      },
      "invoice_date":
      {
          "type": "string",
          "format": "date"
      },
      "due_date":
      {
          "type": "string",
          "format": "date"
      },
      "invoice_total":
      {
          "type": "number",
          "description": "Invoice total amount from the summary section, after 'AMOUNT DUE TO Hilcorp Energy Development LP'"
      },
      "billing_period":
      {
          "type": "string",
          "description": "Month and year of the sales period, e.g., March-2025"
      },
      "buyer":
      {
          "type": "object",
          "properties":
          {
              "name":
              {
                  "type": "string"
              },
              "address":
              {
                  "type": "string"
              },
              "email":
              {
                  "type": "array",
                  "items":
                  {
                      "type": "string",
                      "format": "email"
                  }
              }
          },
          "required":
          [
              "name"
          ]
      },
      "contact_person":
      {
          "type": "object",
          "properties":
          {
              "name":
              {
                  "type": "string"
              },
              "phone":
              {
                  "type": "string"
              },
              "fax":
              {
                  "type": "string"
              },
              "email":
              {
                  "type": "string",
                  "format": "email"
              }
          }
      },
      "bank_details":
      {
          "type": "object",
          "properties":
          {
              "bank_name":
              {
                  "type": "string"
              },
              "aba_number":
              {
                  "type": "string"
              },
              "account_number":
              {
                  "type": "string"
              },
              "payment_methods":
              {
                  "type": "array",
                  "items":
                  {
                      "type": "string"
                  }
              }
          }
      },
      "invoice_summary":
      {
          "type": "object",
          "properties":
          {
              "total_volume_mmbtu":
              {
                  "type": "number"
              },
              "total_amount_usd":
              {
                  "type": "number"
              }
          }
      },
      "line_items":
      {
          "description": "Populated only from Gas Invoice section, ignore the INVOICE DETAILS section",
          "type": "array",
          "items":
          {
              "type": "object",
              "properties":
              {
                  "gas_day":
                  {
                      "type": "string",
                      "format": "date",
                      "description": "Start date of the transaction"
                  },
                  "volume":
                  {
                      "type": "number"
                  },
                  "price":
                  {
                      "type": "number"
                  },
                  "amount":
                  {
                      "type": "number"
                  },
                  "pipeline":
                  {
                      "type": "string",
                      "description": "Extracted from the Facility column"
                  },
                  "location":
                  {
                      "type": "string",
                      "description": "Extracted from the Delivery Pt column"
                  },
                  "deal_number":
                  {
                      "type": "string",
                      "description": "Use existing if available, otherwise generate a random 4 digit identifier numeric in application logic"
                  }
              },
              "required":
              [
                  "gas_day",
                  "volume",
                  "price",
                  "amount",
                  "pipeline",
                  "location",
                  "deal_number"
              ]
          }
      }
  },
  "required":
  [
      "invoice_number",
      "invoice_date",
      "due_date",
      "invoice_total",
      "buyer",
      "invoice_summary",
      "line_items"
  ]
}