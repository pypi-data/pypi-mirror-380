{
    "type": "object",
    "properties":
    {
        "invoice_number":
        {
            "type": "string",
            "description": "Unique identifier for the invoice"
        },
        "invoice_date":
        {
            "type": "string",
            "format": "date",
            "description": "Date when the invoice was issued"
        },
        "invoice_total":
        {
            "type": "number",
            "description": "Invoice total amount from the summary section"
        },
        "buyer":
        {
            "type": "object",
            "properties":
            {
                "name":
                {
                    "type": "string"
                },
                "email":
                {
                    "type": "string",
                    "format": "email"
                }
            },
            "required":
            [
                "name",
                "email"
            ]
        },
        "seller":
        {
            "type": "object",
            "properties":
            {
                "name":
                {
                    "type": "string"
                },
                "accounts_payable_email":
                {
                    "type": "string",
                    "format": "email"
                }
            },
            "required":
            [
                "name",
                "accounts_payable_email"
            ]
        },
        "line_items":
        {
            "description": "List of transactions which are part of all the Deals",
            "type": "array",
            "items":
            {
                "type": "object",
                "properties":
                {
                    "pipeline":
                    {
                        "type": "string",
                        "description": "Pipeline of the transaction which should be extracted from the 'Discharge Point' header"
                    },
                    "deal_number":
                    {
                        "type": "string",
                        "description": "Deal identifier which should be extracted 'Deal:' header"
                    },
                    "gas_day":
                    {
                        "type": "string",
                        "format": "Date of the transaction which should be extracted from the 'Day' column"
                    },
                    "volume":
                    {
                        "type": "number",
                        "description": "Volume of the transaction which should be extracted from the 'Quantity' column"
                    },
                    "price":
                    {
                        "type": "number",
                        "description": "Price of the transaction"
                    },
                    "amount":
                    {
                        "type": "number",
                        "description": "The monetary amount involved in the transaction"
                    }
                },
                "required":
                [
                    "pipeline",
                    "deal_number",
                    "gas_day",
                    "volume",
                    "price",
                    "amount"
                ]
            }
        },
        "bank_details":
        {
            "type": "object",
            "properties":
            {
                "bank_name":
                {
                    "type": "string"
                },
                "iban":
                {
                    "type": "string"
                },
                "bic":
                {
                    "type": "string"
                },
                "currency":
                {
                    "type": "string"
                }
            }
        }
    },
    "required":
    [
        "invoice_number",
        "invoice_total",
        "invoice_date",
        "line_items",
        "buyer",
        "seller"
    ]
}