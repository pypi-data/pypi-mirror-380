# 包含README文件
include README.md

# 包含许可证文件（如果有的话）
include LICENSE*

# 包含模型文件
recursive-include circle_detection_sdk/models *.pt
recursive-include circle_detection_sdk/models *.yaml
recursive-include circle_detection_sdk/models *.yml

# 包含配置文件
include *.cfg
include *.ini
include *.yaml
include *.yml

# 包含文档文件
recursive-include docs *
prune docs/_build

# 排除不需要的文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info

# 包含测试文件（可选）
# recursive-include tests *