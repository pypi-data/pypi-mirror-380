    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run Simple Example",
        "type": "debugpy",
        "request": "launch",
        "justMyCode": true,
        "module": "uv",
        "args": ["build"],
        "cwd": "${workspaceFolder}/examples/simple"
      },
      {
        "name": "Run Web Example",
        "type": "debugpy",
        "request": "launch",
        "justMyCode": true,
        "module": "uv",
        "args": ["build"],
        "cwd": "${workspaceFolder}/examples/web"
      },
      {
        "name": "Debug Package",
        "type": "debugpy",
        "request": "launch",
        "justMyCode": true,
        "module": "uv",
        "args": ["run", "src/hatch_webassets/__init__.py"],
        "cwd": "${workspaceFolder}"
      },
      {
        "name": "Debug Tests",
        "type": "debugpy",
        "request": "launch",
        "justMyCode": true,
        "module": "uv",
        "args": ["run", "pytest"],
        "cwd": "${workspaceFolder}/tests"
      }
    ]
  }