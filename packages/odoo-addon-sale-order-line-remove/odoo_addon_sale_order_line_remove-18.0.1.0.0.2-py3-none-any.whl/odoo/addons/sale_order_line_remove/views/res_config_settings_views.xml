<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_sale" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.sale.order.line.remove</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//block[@name='quotation_order_setting_container']"
                position="inside"
            >
                <setting help="Allow Sale Order Line Remove">
                    <field name="restrict_sale_order_line_remove" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
