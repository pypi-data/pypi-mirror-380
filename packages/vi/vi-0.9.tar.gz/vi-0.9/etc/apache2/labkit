# This is an example Apache2 configuration file for using the
# labkit API through mod_wsgi.

# Note: If you are using a Debian-based system then the paths
# "/var/log/httpd" and "/var/run/httpd" will use "apache2" instead
# of "httpd".
#
# The number of processes and threads is an example only and should
# be adjusted according to local requirements.

Listen 7777

<VirtualHost *:7777>
# <VirtualHost *>
    ServerName labkit.com

    WSGIDaemonProcess api user=lhr group=staff threads=5 python-path=/Users/lhr/anaconda/lib/python2.7/site-packages:/Users/lhr/.local/lib/python2.7/site-packages
    WSGIScriptAlias / /Library/WebServer/Documents/api/app.wsgi

    <Directory /Library/WebServer/Documents/api>
        WSGIProcessGroup api
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
    </Directory>
</VirtualHost>
