include *.txt *.md *.rst *.yml *.yaml *.cfg *.ini *.conf
include LICENSE AUTHORS CHANGELOG HISTORY NEWS
include requirements*.txt
include test-requirements*.txt
include tox.ini .testr.conf .coveragerc
include Procfile
include manage.py
include tasks.py

recursive-include vi *.py *.yaml *.yml *.conf *.cfg *.txt *.md *.rst
