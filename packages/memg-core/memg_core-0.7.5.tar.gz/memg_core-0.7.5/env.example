# Storage and networking (REQUIRED)
BASE_MEMORY_PATH=$HOME/.local/share/memory_system
MEMORY_SYSTEM_MCP_PORT=8787

# YAML Schema (fixed in Docker)
MEMG_YAML_SCHEMA=config/core.memo.yaml

# Core similarity and scoring thresholds (0.0-1.0)
MEMG_SIMILARITY_THRESHOLD=0.7
MEMG_SCORE_THRESHOLD=0.3
MEMG_HIGH_SIMILARITY_THRESHOLD=0.9
MEMG_DECAY_RATE=0.9
MEMG_DECAY_THRESHOLD=0.1

# Processing settings
MEMG_ENABLE_AI_TYPE_VERIFICATION=true

# Performance settings
EMBEDDING_DIMENSION_LEN=384
MEMG_BATCH_SIZE=50
EMBEDDER_MODEL=Snowflake/snowflake-arctic-embed-xs

# Template and database settings
MEMG_TEMPLATE=default
MEMG_QDRANT_COLLECTION=memg
MEMG_KUZU_DB_PATH=kuzu_db

# System settings
MEMORY_SYSTEM_DEBUG=false
MEMORY_SYSTEM_LOG_LEVEL=INFO
