<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_crm_lead_add_multimedia_line_wizard" model="ir.ui.view">
      <field name="name">CRM Lead Add Multimedia Line Wizard</field>
      <field name="model">crm.lead.add.multimedia.line.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group name="basic info">
            <field name="partner_id" invisible="1"/>
            <field name="product_id" options="{'no_create_edit':True}"/>
            <field name="bank_id" options="{'no_create_edit':True}" domain="[('partner_id', '=', partner_id)]"/>
            <separator/>
          </group>
          <footer>
            <button type="object" name="button_create" string="Create"/>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <record id="action_crm_lead_add_multimedia_line_wizard" model="ir.actions.act_window">
      <field name="name">Add multimedia line to CRM Lead</field>
      <field name="binding_model_id" ref="crm.model_crm_lead"/>
      <field name="res_model">crm.lead.add.multimedia.line.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="binding_view_types">form</field>
    </record>
    <record id="view_lead_create_multimedia_lines_wizard_button" model="ir.ui.view">
      <field name="name">crm.lead.create.lines.wizard.button</field>
      <field name="model">crm.lead</field>
      <field name="inherit_id" ref="somconnexio.crm_case_form_view_pack"/>
      <field name="arch" type="xml">
        <xpath expr="//button" position="before">
          <field name="can_add_multimedia_line" invisible="1"/>
          <button name="%(action_crm_lead_add_multimedia_line_wizard)d" string="Add multimedia line to CRM Lead" type="action" context="{'default_active_id': active_id}" attrs="{                     'invisible': [                         '|',                         ('stage_id', '!=', %(crm.stage_lead1)d),                         ('can_add_multimedia_line', '=', False)                     ]                 }"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
