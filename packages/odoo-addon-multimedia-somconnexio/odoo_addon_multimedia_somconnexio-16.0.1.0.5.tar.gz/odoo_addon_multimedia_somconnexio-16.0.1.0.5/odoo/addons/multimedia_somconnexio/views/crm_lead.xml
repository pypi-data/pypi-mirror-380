<?xml version="1.0"?>
<odoo>
  <record id="crm_case_form_view_pack_multimedia" model="ir.ui.view">
    <field name="name">crm.lead.form.opportunity.pack.multimedia</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="somconnexio.crm_case_form_view_pack"/>
    <field name="arch" type="xml">
      <field name="mobile_lead_line_ids" position="after">
        <field name="has_multimedia_lead_lines" invisible="1"/>
        <field name="multimedia_lead_line_ids" string="Multimedia Lead Lines" attrs="{'readonly': False, 'invisible':[('has_multimedia_lead_lines', '=', False)]}" context="{'tree_view_ref':'multimedia_somconnexio.view_multimedia_tree_lead_line_infos'}"/>
      </field>
    </field>
  </record>
  <record id="crm_lead_pack_search_view_multimedia" model="ir.ui.view">
    <field name="name">crm.lead.pack.search.view.multimedia</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="somconnexio.crm_lead_pack_search_view"/>
    <field name="arch" type="xml">
      <filter name="mixed_lead_lines" position="after">
        <filter string="Multimedia lead lines" name="multimedia_lead_lines" domain="[('has_multimedia_lead_lines', '=', True)]"/>
      </filter>
    </field>
  </record>
</odoo>
