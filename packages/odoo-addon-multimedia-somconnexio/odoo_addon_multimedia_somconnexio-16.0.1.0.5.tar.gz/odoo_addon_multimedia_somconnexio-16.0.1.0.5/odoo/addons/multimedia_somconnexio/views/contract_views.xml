<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Two search views inhering the same view conflict with each other-->
  <record id="multimedia_contract_search_view" model="ir.ui.view">
    <field name="name">multimedia contracts search view</field>
    <field name="model">contract.contract</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" filter_domain="['|','|','|','|',('name', 'ilike', self),('code', 'ilike', self),('partner_id', 'ilike', self),('partner_id.vat', 'ilike', self)]"/>
        <separator/>
        <filter name="finished" string="Finished" domain="[('is_terminated', '=', True)]"/>
        <filter name="active" string="Active" domain="[('is_terminated', '=', False)]"/>
        <separator/>
        <field name="partner_id"/>
        <field name="commercial_partner_id"/>
        <filter string="Archived" domain="[('active', '=', False)]" name="inactive"/>
        <group expand="0" string="Group By...">
          <filter string="Associated Partner" name="group_by_partner" domain="[]" context="{'group_by':'partner_id'}"/>
          <filter name="commercial_partner_groupby" string="Commercial Entity" context="{'group_by': 'commercial_partner_id'}"/>
          <filter name="group_by_next_invoice" string="Next Invoice" domain="[('recurring_next_date', '!=', False)]" context="{'group_by':'recurring_next_date'}"/>
          <filter name="group_by_date_end" string="Date End" domain="[]" context="{'group_by':'date_end'}"/>
          <filter name="group_by_service_supplier_id" string="Service Supplier" domain="[]" context="{'group_by':'service_supplier_id'}"/>
          <filter name="group_by_date_start" string="Date Start" domain="[]" context="{'group_by':'date_start'}"/>
        </group>
      </search>
    </field>
  </record>
  <record id="contract_contract_tree_multimedia_view" model="ir.ui.view">
    <field name="name">contract.tree.multimedia.view</field>
    <field name="model">contract.contract</field>
    <field name="arch" type="xml">
      <tree>
        <field name="id" widget="open_tab"/>
        <field name="code"/>
        <field name="partner_id"/>
        <field name="is_terminated"/>
        <field name="date_start"/>
        <field name="date_end"/>
      </tree>
    </field>
  </record>
  <record id="action_contracts_multimedia" model="ir.actions.act_window">
    <field name="name">Multimedia Contracts</field>
    <field name="res_model">contract.contract</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="multimedia_somconnexio.multimedia_contract_search_view"/>
    <field name="domain">[('service_technology_id.name', '=', 'Multimedia')]</field>
  </record>
  <record model="ir.actions.act_window.view" id="action_contracts_multimedia_tree">
    <field name="sequence">0</field>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="contract_contract_tree_multimedia_view"/>
    <field name="act_window_id" ref="action_contracts_multimedia"/>
  </record>
  <record model="ir.actions.act_window.view" id="action_contracts_multimedia_form">
    <field name="sequence">1</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="somconnexio.contract_contract_form_view"/>
    <field name="act_window_id" ref="action_contracts_multimedia"/>
  </record>
  <menuitem id="menu_contracts_multimedia" name="Multimedia Contracts" action="action_contracts_multimedia" web_icon="multimedia_somconnexio,static/description/multimedia_contracts.png" sequence="5"/>
</odoo>
