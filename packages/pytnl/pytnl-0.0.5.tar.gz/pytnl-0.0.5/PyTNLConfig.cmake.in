@PACKAGE_INIT@

set(PyTNL_PROJECT_NAME "@PROJECT_NAME@")

# CMake build configuration
set(PyTNL_BUILD_TYPE "@CMAKE_BUILD_TYPE@")

# Compiler configuration
set(PyTNL_C_COMPILER "@CMAKE_C_COMPILER@")
set(PyTNL_C_COMPILER_VERSION @CMAKE_C_COMPILER_VERSION@)
set(PyTNL_CXX_COMPILER "@CMAKE_CXX_COMPILER@")
set(PyTNL_CXX_COMPILER_VERSION @CMAKE_CXX_COMPILER_VERSION@)

set(PyTNL_C_FLAGS "@CMAKE_C_FLAGS@")
set(PyTNL_C_FLAGS_DEBUG "@CMAKE_C_FLAGS_DEBUG@")
set(PyTNL_C_FLAGS_RELEASE "@CMAKE_C_FLAGS_RELEASE@")
set(PyTNL_C_FLAGS_RELWITHDEBINFO "@CMAKE_C_FLAGS_RELWITHDEBINFO@")
set(PyTNL_CXX_FLAGS "@CMAKE_CXX_FLAGS@")
set(PyTNL_CXX_FLAGS_DEBUG "@CMAKE_CXX_FLAGS_DEBUG@")
set(PyTNL_CXX_FLAGS_RELEASE "@CMAKE_CXX_FLAGS_RELEASE@")
set(PyTNL_CXX_FLAGS_RELWITHDEBINFO "@CMAKE_CXX_FLAGS_RELWITHDEBINFO@")

set(PyTNL_SHARED_LIBRARY_LINK_C_FLAGS "@CMAKE_SHARED_LIBRARY_LINK_C_FLAGS@")
set(PyTNL_SHARED_LIBRARY_LINK_C_FLAGS_DEBUG "@CMAKE_SHARED_LIBRARY_LINK_C_FLAGS_DEBUG@")
set(PyTNL_SHARED_LIBRARY_LINK_C_FLAGS_RELEASE "@CMAKE_SHARED_LIBRARY_LINK_C_FLAGS_RELEASE@")
set(PyTNL_EXE_LINKER_FLAGS "@CMAKE_EXE_LINKER_FLAGS@")
set(PyTNL_EXE_LINKER_FLAGS_DEBUG "@CMAKE_EXE_LINKER_FLAGS_DEBUG@")
set(PyTNL_EXE_LINKER_FLAGS_RELEASE "@CMAKE_EXE_LINKER_FLAGS_RELEASE@")
set(PyTNL_SHARED_LINKER_FLAGS "@CMAKE_SHARED_LINKER_FLAGS@")
set(PyTNL_SHARED_LINKER_FLAGS_DEBUG "@CMAKE_SHARED_LINKER_FLAGS_DEBUG@")
set(PyTNL_SHARED_LINKER_FLAGS_RELEASE "@CMAKE_SHARED_LINKER_FLAGS_RELEASE@")

# Find dependencies
find_package(Python 3 COMPONENTS Interpreter Development REQUIRED)
find_package(TNL REQUIRED)

# Set the install path for Python modules
set(PyTNL_PYTHON_SITE_PACKAGES_DIR lib/python${Python_VERSION_MAJOR}.${Python_VERSION_MINOR}/site-packages)

include(${CMAKE_CURRENT_LIST_DIR}/PyTNLTargets.cmake)
