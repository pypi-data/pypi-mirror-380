{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Backend API",
  "type": "object",
  "properties": {
    "firmware_response": { "$ref": "#/definitions/BackendFirmwareResponse" }
  },
  "definitions": {
    "BackendFirmwareResponse": {
      "type": "object",
      "properties": {
        "info": {
          "type": "object",
          "properties": {
            "fm_release_date": {
              "type": "string",
              "format": "date"
            },
            "version": {
              "type": "string"
            }
          },
          "required": [
            "fm_release_date",
            "version"
          ]
        },
        "file": {
          "type": "object",
          "properties": {
            "file_name": {
              "type": "string"
            },
            "content": {
              "type": "string",
              "contentEncoding": "base64"
            }
          },
          "required": [
            "file_name",
            "content"
          ]
        }
      },
      "required": [
        "info",
        "file"
      ]
    }
  }
}