{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generated schema for Root",
  "type": "object",
  "properties": {
    "devices": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "product": {
            "type": [ "string", "null" ]
          },
          "product_family": {
            "type": "string"
          },
          "device": {
            "$ref": "#/$defs/node_address"
          },
          "host": {
            "oneOf": [
              { "type": "null" },
              { "$ref": "#/$defs/node_address" }
            ]
          },
          "version": {
            "type": [ "string", "null" ]
          },
          "id": {
            "type": "integer"
          }
        },
        "required": [
          "product_family",
          "device",
          "version",
          "id"
        ]
      }
    }
  },
  "required": [
    "devices"
  ],
  "$defs": {
    "node_address": {
      "type": "object",
      "properties": {
        "name": {
          "type": [ "string", "null" ]
        },
        "description": {
          "type": [ "string", "null" ]
        },
        "ip": {
          "type": "string"
        },
        "mac": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "ip",
        "mac"
      ]
    }
  }
}