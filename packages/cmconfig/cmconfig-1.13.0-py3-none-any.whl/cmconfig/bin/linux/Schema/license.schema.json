{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "LicenseFeature": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "available": {
                    "type": "boolean",
                    "description": "Indicates if the feature is available"
                },
                "temporal": {
                    "type": "boolean",
                    "description": "Indicates if the feature is time-limited"
                },
                "enable": {
                    "type": "boolean",
                    "description": "Indicates if the feature is enabled in HW"
                },
                "total_time": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Total allocated time in minutes (if temporal)"
                },
                "used_time": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Time already used in minutes (if temporal)"
                }
            },
            "required": [
                "available",
                "temporal",
                "total_time",
                "used_time"
            ],
            "additionalProperties": false
        }
    }
}
