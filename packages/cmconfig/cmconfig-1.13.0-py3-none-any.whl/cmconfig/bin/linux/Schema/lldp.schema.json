{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LLDP API",
  "type": "object",
  "properties": {
    "lldp": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "interface": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "chassis": {
                  "$ref": "#/definitions/InterfaceProperty"
                },
                "port": {
                  "$ref": "#/definitions/InterfaceProperty"
                }
              },
              "required": [
                "name",
                "chassis",
                "port"
              ]
            }
          }
        },
        "required": [
          "interface"
        ]
      }
    }
  },
  "required": [
    "lldp"
  ],
  "definitions": {
    "InterfaceProperty": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                },
                "raw_value": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              },
              "required": [
                "type"
              ]
            }
          }
        },
        "required": [
          "id"
        ]
      }
    }
  }
}
