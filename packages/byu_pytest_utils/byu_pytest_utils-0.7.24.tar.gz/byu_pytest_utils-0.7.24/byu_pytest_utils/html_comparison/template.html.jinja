<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Comparison Report</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }
        body {
            flex-direction: column;
            font-family: monospace, sans-serif;
            line-height: 1.4;
            background-color: #f9f9f9;
            color: rgb(0, 46, 93);
        }
        .page-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }
        header, footer {
            background-color: rgb(0, 46, 93);
            color: white;
            text-align: center;
        }
        header h1, footer p {
            margin: 0;
            padding: 5px 0;
        }
        header {
            margin-bottom: 10px;
        }
        footer {
            margin-top: 10px;
        }
        h2 {
            padding: 5px 0;
        }
        .test-summary {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 10px 50px;
            font-size: 1em;
            font-weight: bold;
        }
        .test-result-passed, .test-result-failed {
            padding: 5px;
            border-radius: 5px;
            margin: 10px 50px;
            position: relative;
        }
        .test-result-passed {
            background-color: #d4edda;
            border: 2px solid #c3e6cb;
        }
        .test-result-failed {
            background-color: #f8d7da;
            border: 2px solid #f5c6cb;
        }
        .result-header {
            text-align: center;
        }
        .result-header h2 {
            margin: 0;
            font-size: 1.2em;
        }
        .result-subheader {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 5px;
            font-size: 1em;
            padding: 0 10px;
        }
        .result-subheader .status, .result-subheader .score {
            font-size: 1em;
        }
        .result-subheader .status h2, .result-subheader .score h2 {
            display: inline;
            font-size: 1em;
            margin-right: 5px;
        }
        ul.test-info {
            list-style-type: none;
            padding-left: 20px;
            margin: 10px 0;
        }
        ul.test-info li {
            margin: 6px 0;
        }
        ul.test-info li.fail {
            color: #721c24;
        }
        ul.test-info li.pass {
            color: #155724;
        }
        .blocked-message {
            margin: 10px 20px;
            padding: 10px;
            font-style: italic;
            color: #555;
        }
        pre.failure-output {
            background: #fff0f0;
            border: 1px solid #f5c6cb;
            padding: 8px;
            border-radius: 3px;
            margin-top: 5px;
            white-space: pre-wrap;
        }
        .comparison-container {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            gap: 10px;
            margin: 10px 0;
            padding: 0 10px;
        }
        .section {
            flex: 1;
            min-width: 300px;
        }
        .content {
            background: rgb(245, 245, 245);
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 3px;
            overflow-x: auto;
        }
    </style>
</head>
<body>
    <div class="page-container">
        <header>
            <h1>{{ TEST_NAME }} Results</h1>
        </header>
        <main class="main-content">
            <div class="test-summary">
                <span>Passed: {{ TESTS_PASSED }} / {{ TOTAL_TESTS }}</span>
                <span>Total Score: {{ TOTAL_SCORE }} / {{ TOTAL_POSSIBLE_SCORE }}</span>
            </div>
            {% if TEST_TIER %}
            {% for name, sub_info, score, max_score, status in COMPARISON_INFO %}
            <div class="test-result-{{ status }}">
                <div class="content-wrapper">
                    <div class="result-header">
                        <h2>{{ name }}</h2>
                        <div class="result-subheader">
                            <div class="status">
                                <h2>{{ status.title() }}</h2>
                            </div>
                            <div class="score">
                                <h2>Score:</h2> {{ score }} / {{ max_score }}
                            </div>
                        </div>
                    </div>
                    {% if sub_info|length == 1 and sub_info[0][3] == "Tests for this tier will run when all prerequisite tiers have passed." %}
                        <div class="blocked-message">Tests for this tier will run when all prerequisite tiers have passed.</div>
                    {% else %}
                    <ul class="test-info">
                    {% for sub_name, observed, expected, output, score, max_score, status in sub_info %}
                        {% if status == 'passed' %}
                            <li class="pass">{{ sub_name }} — Pass</li>
                        {% else %}
                            <li class="fail">{{ sub_name }} — Fail</li>
                            {% if observed and expected %}
                                <div class="comparison-container">
                                    <div class="section">
                                        <p><strong>Observed (Your Actual Output)</strong></p>
                                        <div class="content"><pre>{{ observed }}</pre></div>
                                    </div>
                                    <div class="section">
                                        <p><strong>Expected (Correct Output)</strong></p>
                                        <div class="content"><pre>{{ expected }}</pre></div>
                                    </div>
                                </div>
                            {% elif output %}
                                <pre class="failure-output">{{ output }}</pre>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                    </ul>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
            {% else %}
            {% for name, observed, expected, output, score, max_score, status in COMPARISON_INFO %}
            <div class="test-result-{{ status }}">
                <div class="content-wrapper">
                    <div class="result-header">
                        <h2>{{ name }}</h2>
                        <div class="result-subheader">
                            <div class="status">
                                <h2>Status:</h2> {{ status.title() }}
                            </div>
                            <div class="score">
                                <h2>Score:</h2> {{ score }} / {{ max_score }}
                            </div>
                        </div>
                    </div>
                    {% if status == 'failed' %}
                        {% if observed and expected %}
                            <div class="comparison-container">
                                <div class="section">
                                    <p><strong>Observed (Your Actual Output)</strong></p>
                                    <div class="content"><pre>{{ observed }}</pre></div>
                                </div>
                                <div class="section">
                                    <p><strong>Expected (Correct Output)</strong></p>
                                    <div class="content"><pre>{{ expected }}</pre></div>
                                </div>
                            </div>
                        {% elif output %}
                            <pre class="failure-output">{{ output }}</pre>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
            {% endfor %}
            {% endif %}
        </main>
        <footer>
            <p>Generated by byu_pytest_utils on {{ TIME }}</p>
        </footer>
    </div>
</body>
</html>
