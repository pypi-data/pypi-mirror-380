# Auto detect text files and perform LF normalization
* text=auto

# Rust files
*.rs text eol=lf
*.toml text eol=lf

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# GitHub workflows
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.so binary
*.dylib binary
*.dll binary
*.whl binary
*.tar.gz binary
