[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "OhMyAPI project"
authors = [
    { name = "You", email = "you@you.tld" }
]
requires-python = ">=3.13"
readme = "README.md"
license = { text = "MIT" }

dependencies = [
    "typer >=0.19.1,<0.20.0",
    "jinja2 >=3.1.6,<4.0.0",
    "fastapi >=0.117.1,<0.118.0",
    "tortoise-orm >=0.25.1,<0.26.0",
    "aerich >=0.9.1,<0.10.0",
    "uvicorn >=0.36.0,<0.37.0",
    "ipython >=9.5.0,<10.0.0",
    "passlib >=1.7.4,<2.0.0",
    "pyjwt >=2.10.1,<3.0.0",
    "python-multipart >=0.0.20,<0.0.21",
    "crypto >=1.4.1,<2.0.0",
    "argon2-cffi >=25.1.0,<26.0.0",
]

[tool.poetry.group.dev.dependencies]
ipython = ">=9.5.0,<10.0.0"

[project.optional-dependencies]
auth = ["passlib", "pyjwt", "crypto", "argon2-cffi", "python-multipart"]

[tool.poetry]
package-mode = false

[project.scripts]
{{ project_name }} = "ohmyapi.cli:app"
