<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_tree_invoiced_amount" model="ir.ui.view">
        <field name="name">sale.order.tree.amount_invoiced</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="amount_invoiced" sum="Already invoiced" optional="hide" />
            </xpath>
        </field>
    </record>
    <record id="view_quotation_tree_invoiced_amount" model="ir.ui.view">
        <field name="name">quotation.tree.invoiced_amount</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="amount_invoiced" sum="Already invoiced" optional="hide" />
                <field
                    name="amount_to_invoice"
                    sum="Amount to invoice"
                    optional="hide"
                />
            </xpath>
        </field>
    </record>
</odoo>
