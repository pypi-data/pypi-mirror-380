@multilingual_tabs: 'default';

@signout_button: 'default';

@multiline_textarea: 'default';

@account_dropdown: 'default';

@auth_form: 'default';

@frontpage_header: 'default';

@section: 'default';

@value_list: 'default';

@page_header: 'default';

@separated: 'default';

@menu_burger: 'default';

