<odoo>
    <record id="hr_payslip_line_view_tree" model="ir.ui.view">
          <field name="name">hr.payslip.line.tree</field>
          <field name="model">hr.payslip_line</field>
          <field name="arch" type="xml">
              <tree string="Details" editable="bottom" decoration-info="total == 0">
                    <field name="rule_id" />
                    <field name="category_id" />
                    <field name="rate" />
                    <field name="quantity" />
                    <field name="amount" />
                    <field name="total" />
              </tree>
          </field>
    </record>
</odoo>
