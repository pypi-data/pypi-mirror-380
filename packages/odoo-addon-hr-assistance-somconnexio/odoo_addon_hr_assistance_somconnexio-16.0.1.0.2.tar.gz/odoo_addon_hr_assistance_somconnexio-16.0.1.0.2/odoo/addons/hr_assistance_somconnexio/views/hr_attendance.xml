<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="hr_attendance_form_view" model="ir.ui.view">
    <field name="name">hr.attendance.form.view</field>
    <field name="model">hr.attendance</field>
    <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
    <field name="arch" type="xml">
      <field name="check_out" position="after">
        <field name="place_id"/>
        <field name="comments"/>
      </field>
    </field>
  </record>
  <record id="hr_attendance_tree_view" model="ir.ui.view">
    <field name="name">hr.attendance.tree.view</field>
    <field name="model">hr.attendance</field>
    <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
    <field name="arch" type="xml">
      <field name="employee_id" position="after">
        <field name="place_id" string="Place"/>
      </field>
      <xpath expr="//tree" position="attributes">
        <attribute name="editable" position="remove"/>
      </xpath>
    </field>
  </record>
  <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
    <field name="name">My Attendances</field>
    <field name="res_model">hr.attendance</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[('employee_id.user_id.id', '=', uid)]</field>
    <field name="context">{'search_default_myattendances': True}</field>
  </record>
  <record id="hr_attendance_report_theoretical_time.hr_attendance_theoretical_action" model="ir.actions.act_window">
    <field name="domain">[('employee_id.active', '=', True)]</field>
  </record>
</odoo>
