# Justfile for docdocgo example project

# Default recipe
default:
    @just --list

# Install dependencies
install:
    @echo "ðŸ“¦ Installing dependencies..."
    uv sync --index-strategy unsafe-best-match
    @echo "âœ… Dependencies installed successfully!"

# Run the example
run:
    @echo "ðŸš€ Running docdocgo example..."
    uv run python main.py
    @echo "âœ… Example completed!"

# Generate template Word document
generate-template:
    @echo "ðŸ“„ Generating Word template with marker..."
    uv run python ../generate_example_template.py
    @echo "âœ… Template generation completed!"

# Clean generated files
clean:
    @echo "ðŸ§¹ Cleaning generated files..."
    rm -f *.docx
    @echo "âœ… Cleaned all .docx files!"

# Test the template with docdocgo
test-template:
    @echo "ðŸ§ª Testing template with sample data..."
    uv run python test_template.py
    @echo "âœ… Template test completed!"

# Full workflow: generate template, test it, and run main example
demo:
    @echo "ðŸŽ¬ Running full demo workflow..."
    just generate-template
    just test-template
    just run
    @echo "ðŸŽ‰ Full demo completed!"