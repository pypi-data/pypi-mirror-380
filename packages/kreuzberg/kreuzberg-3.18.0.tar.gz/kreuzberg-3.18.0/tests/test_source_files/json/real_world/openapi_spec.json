{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample API",
    "description": "This is a sample API specification",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@example.com",
      "url": "https://www.example.com/support"
    },
    "license": {
