{
  "version": "1.0.0",
  "kind": "DataContract",
  "apiVersion": "3.0.2",
  "id": "customers",
  "name": "Customers",
  "description": {"usage": "Sample customers contract"},
  "status": "active",
  "servers": [
    {
      "server": "local",
      "type": "filesystem",
      "path": "data/customers",
      "format": "json",
      "customProperties": [
        {
          "property": "dc43.versioning",
          "value": {
            "mode": "snapshot",
            "includePriorVersions": false,
            "subfolder": "{version}",
            "filePattern": "customers.json"
          }
        },
        {
          "property": "dc43.pathPattern",
          "value": "data/customers/{==version}/customers.json"
        }
      ]
    }
  ],
  "schema": [
    {
      "name": "customers",
      "properties": [
        {"name": "customer_id", "physicalType": "integer", "required": true, "unique": true},
        {"name": "customer_name", "physicalType": "string", "required": true}
      ]
    }
  ]
}
